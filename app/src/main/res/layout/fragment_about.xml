<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/vertical_margin_medium"
            android:paddingLeft="@dimen/horizontal_margin_medium"
            android:paddingRight="@dimen/horizontal_margin_medium"
            android:paddingTop="@dimen/vertical_margin_medium">

            <TextView
                android:id="@+id/about_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/vertical_margin_small"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryText"
                android:text="About Nepali Katha (Stories)"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/about_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_title"
                android:layout_marginTop="@dimen/vertical_margin_medium"
                android:fontFamily="serif"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_medium"
                android:text="This app contains lots of Nepali and English Stories that touches your heart. This is the expansion of first Android Application developed by Nepali Coders to publish on the Google Play Store market and to motivate new generations in Android Application Development.\n\nFor further queries contact:"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/about_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/nepalicoder_logo" />

            <TextView
                android:id="@+id/about_developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_logo"
                android:layout_marginTop="@dimen/vertical_margin_medium"
                android:fontFamily="serif"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_medium"
                android:text="Nepali Coders\nwww.nepalicoders.com\nnepalicoders@gmail.com"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
